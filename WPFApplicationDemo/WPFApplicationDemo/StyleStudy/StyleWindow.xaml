<Window x:Class="WPFApplicationDemo.StyleStudy.StyleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApplicationDemo.StyleStudy"
        mc:Ignorable="d"
        Title="StyleWindow" Height="350" Width="623">
    <StackPanel Orientation="Horizontal" Margin="5">
        <local:CarDetailView x:Name="detailView"/>
        <ListBox x:Name="listBoxCar" Width="180" Margin="5,0" SelectionChanged="listBoxCar_SelectionChanged"></ListBox>
    </StackPanel>
</Window>
